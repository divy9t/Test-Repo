<odoo>
	<data>
		<record id="sn_activities_tree_view" model="ir.ui.view">
			<field name="name">Activities</field>
			<field name="model">school_net.activities</field>
			<field name="arch" type="xml">
				<tree string="Message Logs">
					<field name="sn_partnerId"/>
					<field name="sn_campaignName"/>
					<field name="sn_activityType"/>
					<field name="sn_subject"/>
					<field name="sn_start"/>
					<field name="sn_end"/>
					<field name="sn_duration"/>
					<field name="sn_disposition"/>
					<field name="sn_status"/>
					<field name="sn_agentId"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="sn_activities_form_view">
	      <field name="name">Activities</field>
	      <field name="model">school_net.activities</field>
	      <field name="arch" type="xml">
	        <form>
	          <sheet>
	          	<div class="oe_title">
	                <label for="sn_campaignName" string="Campaign Name" class="oe_edit_only"/>
	                <h1><field name="sn_campaignName" required="1"/></h1>

	            </div>
	           <group name="first" col="2">
                    <field name="sn_start" class="oe_inline"/>
                    <field name="sn_end" class="oe_inline"/>
                </group>

                <group>
		          	<group>
			          	<field name="sn_activityType"/>
			          	<field name="sn_subject"/>
			          	<field name="sn_comments"/>
			          	<field name="sn_duration"/>
			          	<field name="sn_partnerId" invisible="1"/>
			        </group> 
			        <group>
			          	<field name="sn_disposition"/>
			          	<field name="sn_audioFile" widget="url"/>
			          	<field name="sn_status"/>
			          	<field name="sn_agentId"/>
			          	<field name="sn_employeeId"/>
			        </group> 
			    </group>

	          </sheet>
	        </form>
	      </field>
	    </record>

		<record id="sn_activities_action" model="ir.actions.act_window">
			<field name="name">Activities</field>
			<field name="res_model">school_net.activities</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('sn_partnerId','=',active_id)]</field>
			<field name="help" type="html">
			   <p class="o_view_nocontent_smiling_face">Create New Record</p>
			</field>
		</record>

		<record id="sn_activities_all_action" model="ir.actions.act_window">
			<field name="name">Activities</field>
			<field name="res_model">school_net.activities</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
			   <p class="o_view_nocontent_smiling_face">Create New Record</p>
			</field>
		</record>
		
		<menuitem id="sn_partner_report_menuitem" name="Reporting" parent="contacts.menu_contacts" />
		<menuitem id="sn_activity_menuitem" name="Activities" parent="sn_partner_report_menuitem" action="sn_activities_all_action"/>
	</data>
</odoo>