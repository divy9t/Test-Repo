<odoo>
	<data>
		<record id="sn_campaign_tree_view" model="ir.ui.view">
			<field name="name">Campaign Tree View</field>
			<field name="model">school_net.campaign</field>
			<field name="arch" type="xml">
				<tree string="Campaign Master">
					<field name="sn_name"/>
					<field name="sn_description"/>
					<field name="sn_ActivityNote"/>
					<field name="sn_activityType"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="sn_campaign_form_view">
	      <field name="name">Campaigns</field>
	      <field name="model">school_net.campaign</field>
	      <field name="arch" type="xml">
	        <form>
	          <sheet>
	          	<div class="oe_title">
	                <label for="sn_name" string="Campaign Name" class="oe_edit_only"/>
	                <h1><field name="sn_name" required="1"/></h1>
	            </div>
	             <group>
	               <field name="sn_description"/>
	             </group>
	                
	              <group>
	                <group>
                    <field name="sn_activityType"/>
                  </group>
                  <group>
                    <field name="sn_ActivityNote"/>
                  </group>
                </group>
                <hr/>
                <group>
	                <group>
                    <field name="sn_createCallingList"/>
                  </group>
                  <group>
                    <field name="sn_exclusionPeriodFrequency"  attrs="{'invisible':[('sn_createCallingList','=',False)]}"/>
                  </group>
                </group>
                <group>
                	<field name="sn_contactDomain" widget="domain" options="{'model': 'res.partner'}" attrs="{'invisible':[('sn_createCallingList','=',False)]}"/>
			    </group>
                

	          </sheet>
	        </form>
	      </field>
	    </record>

		<record id="sn_campaign_action" model="ir.actions.act_window">
			<field name="name">Campaigns</field>
			<field name="res_model">school_net.campaign</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="help" type="html">
			   <p class="o_view_nocontent_smiling_face">Create New Campaign</p>
			</field>
		</record>


		<menuitem id="sn_campaign_menuitem" name="Campaigns" parent="sn_config_menuitem" action="sn_campaign_action"/>
	</data>
</odoo>